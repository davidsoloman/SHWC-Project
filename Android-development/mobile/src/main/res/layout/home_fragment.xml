<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:id="@+id/home_fragment">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_marginTop="75dp"
        android:src="@drawable/localisation_img"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="46dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Localistion :"
        android:id="@+id/loc_label"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=". . ."
        android:id="@+id/loc_value"
        android:layout_marginStart="26dp"
        android:textStyle="bold"
        android:layout_above="@+id/imageView2"
        android:layout_toEndOf="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_marginTop="36dp"
        android:src="@drawable/box"
        android:layout_below="@+id/loc_label"
        android:layout_alignStart="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Status :"
        android:id="@+id/labelBox"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignStart="@+id/loc_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=". . ."
        android:id="@+id/boxStatus"
        android:textStyle="bold"
        android:layout_alignTop="@+id/labelBox"
        android:layout_alignStart="@+id/loc_value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Nom de la box :"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignStart="@+id/labelBox" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=". . ."
        android:id="@+id/boxName"
        android:layout_alignTop="@+id/textView"
        android:layout_alignStart="@+id/boxStatus"
        android:textStyle="bold" />


</RelativeLayout>
